{
    "imports": {
        "@/": "./src/",
        "@config/": "./src/config/",
        "@routes/": "./src/routes/",
        "@handlers/": "./src/handlers/",
        "@services/": "./src/services/",
        "@repositories/": "./src/repositories/",
        "@schemas/": "./src/schemas/",
        "@middlewares/": "./src/middlewares/",
        "@lib/": "./src/lib/",
        "@types/": "./src/types/",
        "@hono/hono": "jsr:@hono/hono@^4.11.3",
        "hono/factory": "jsr:@hono/hono@^4.11.3/factory",
        "hono/cors": "jsr:@hono/hono@^4.11.3/cors",
        "hono/logger": "jsr:@hono/hono@^4.11.3/logger",
        "@hono/zod-validator": "jsr:@hono/zod-validator@^0.7.6",
        "@std/crypto": "jsr:@std/crypto@^1.0.5",
        "@std/encoding": "jsr:@std/encoding@^1.0.10",
        "@std/fs": "jsr:@std/fs@^1.0.21",
        "@std/path": "jsr:@std/path@^1.1.4",
        "@supabase/auth-js": "npm:@supabase/auth-js@^2.90.1",
        "@supabase/postgrest-js": "npm:@supabase/postgrest-js@^2.90.1",
        "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.90.1",
        "zod": "npm:zod@^4.3.5"
    },
    "tasks": {
        "dev": "deno run --env-file=.env --watch --allow-net --allow-write --allow-env --allow-read index.ts",
        "start": "deno run --env-file=.env --allow-net --allow-env --allow-read index.ts",
        "test": "deno test --env-file=.env --allow-net --allow-env",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "env:check": "deno run --allow-read --allow-env scripts/debug-env.ts",
        "gen:types": "deno run --env-file=.env --allow-all scripts/generate-types.ts"
    },
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    }
}