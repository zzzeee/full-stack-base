{
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.11.3",
    "@hono/zod-validator": "jsr:@hono/zod-validator@^0.7.6",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@supabase/postgrest-js": "npm:@supabase/postgrest-js@^2.90.1",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.90.1",
    "hono": "npm:hono@^4.11.3",
    "zod": "npm:zod@^4.3.5"
  },

  "tasks": {
    "dev": "deno run --env-file=.env --watch --allow-net --allow-write --allow-env --allow-read index.ts",
    "start": "deno run --env-file=.env --allow-net --allow-env --allow-read index.ts",
    "test": "deno test --env-file=.env --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "env:check": "deno run --allow-read --allow-env scripts/debug-env.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
